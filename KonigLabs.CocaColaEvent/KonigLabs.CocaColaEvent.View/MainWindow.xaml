<Window x:Class="KonigLabs.CocaColaEvent.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonigLabs.CocaColaEvent.View"
        xmlns:controls="clr-namespace:WPFControls.Layout.Controls;assembly=WPFControls.Layout"
        mc:Ignorable="d" 
        WindowStyle="None"
    SizeToContent="WidthAndHeight"
    WindowState="Maximized"    
         AllowsTransparency="True"

        Title="Coca Cola" >

    <controls:TransitioningContentControl BorderThickness="0" Transition="LeftReplaceTransition"   Content="{Binding Path=CurrentContent}">
        <controls:TransitioningContentControl.LayoutTransform>
            <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
        </controls:TransitioningContentControl.LayoutTransform>
    </controls:TransitioningContentControl>
</Window>
